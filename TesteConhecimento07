namespace DeusSejaLouvado
{
    class Program
    {
        static void Main()
        {
            List<string> nomes = new List<string>();
            string opcao;
            do
            {
                Console.WriteLine("Qual seu nome?");
                string nome = Console.ReadLine();

                nomes.Add(nome);

                Console.WriteLine("Dewseja acresentar mais nomes? (s/n)".ToLower());
                opcao = Console.ReadLine();
            }
            while (opcao.ToLower() == "s");
            {
                Console.WriteLine("Lista de nomes cadastrados");

            foreach (string nome in nomes)
                {
                    Console.WriteLine(nome);
                }

                Console.WriteLine("Digite um nome a procurar: ");
                string procurar = Console.ReadLine();

                bool encontrado = false;

                foreach (string nome in nomes)
                {
                    if (nome.ToLower() == procurar.ToLower())
                    {
                        encontrado = true;
                    }
                }

                if(encontrado)
                    Console.WriteLine("Nome encontrado!");
                else
                    Console.WriteLine("Nome n");
            }
        }
    }
}
